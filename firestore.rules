rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================================
    // ผู้ใช้ (Users)
    // =====================================================================
    match /users/{userId} {
      // อนุญาตให้สร้างโปรไฟล์ได้เฉพาะเมื่อ userId ตรงกับ uid ของผู้ใช้ที่ล็อกอิน
      // และยังไม่มีเอกสารโปรไฟล์ของผู้ใช้นั้นๆ อยู่
      allow create: if request.auth != null && request.auth.uid == userId;

      // อนุญาตให้อ่านและอัปเดตได้เฉพาะเจ้าของโปรไฟล์เท่านั้น
      allow read, update: if request.auth != null && request.auth.uid == userId;

      // ไม่อนุญาตให้ลบโปรไฟล์ เพื่อรักษาข้อมูลอ้างอิง
      allow delete: if false;

      // --- คอลเลกชันย่อยภายใต้ User ---

      // =====================================================================
      // ประวัติ KYC (KYC Events)
      // =====================================================================
      match /kycEvents/{eventId} {
        // อนุญาตให้เจ้าของโปรไฟล์อ่านและสร้างประวัติ KYC ของตนเองได้เท่านั้น
        allow read, create: if request.auth != null && request.auth.uid == userId;

        // ไม่อนุญาตให้อัปเดตหรือลบประวัติ เพื่อความสมบูรณ์ของข้อมูล
        allow update, delete: if false;
      }

      // =====================================================================
      // (ตัวอย่าง) คอลเลกชันย่อยอื่นๆ เช่น 'settings'
      // =====================================================================
      // match /settings/{settingId} {
      //   allow read, write: if request.auth != null && request.auth.uid == userId;
      // }
    }

    // =====================================================================
    // (ตัวอย่าง) คอลเลกชันอื่นๆ เช่น 'posts'
    // หากโปรเจกต์ของคุณมีส่วนอื่นๆ เช่น การโพสต์, แชท
    // คุณสามารถเพิ่มกฎสำหรับคอลเลกชันเหล่านั้นที่นี่
    // =====================================================================
    // match /posts/{postId} {
    //   // อนุญาตให้ผู้ใช้ที่ล็อกอินแล้วทุกคนอ่านโพสต์ได้
    //   allow read: if request.auth != null;
    //
    //   // อนุญาตให้สร้างโพสต์ได้ ถ้าข้อมูลที่ส่งมาถูกต้อง (เช่น มี userId ตรงกับคนสร้าง)
    //   allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
    //
    //   // อนุญาตให้เจ้าของโพสต์อัปเดตและลบโพสต์ของตนเองได้
    //   allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    // }

  }
}